{
  "extends": "../../tsconfig.json",
  "include": ["./src", "../../common.d.ts", "./src/vite-env.d.ts"],
  "compilerOptions": {
    "sourceMap": true,
    "strict": true,
    "outDir": "lib",
    "target": "es6",
    "allowJs": true,
    "skipLibCheck": true,
    "allowUmdGlobalAccess": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "jsx": "react"
  },
  "references": [
    { "path": "../components" },
    { "path": "../icons" },
    { "path": "../common" },
    { "path": "../protobuf" }
  ]
}

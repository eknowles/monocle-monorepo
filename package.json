{
  "name": "monocle",
  "private": true,
  "version": "1.0.0",
  "license": "UNLICENCED",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "plop": "plop --plopfile scripts/plop/plopfile.ts --dest . --require ./scripts/ts-node-register",
    "build": "lerna run build --stream --scope=@monocle/*",
    "extract": "formatjs extract",
    "compile": "formatjs compile",
    "extract-en": "yarn extract 'packages/**/*.tsx' --out-file packages/common/lang/en.json --id-interpolation-pattern '[sha512:contenthash:base64:6]'",
    "compile-en": "yarn compile packages/common/lang/en.json --ast --out-file packages/common/compiled-lang/en.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "@babel/core": "^7.15.0",
    "@babel/preset-react": "^7.14.5",
    "@hot-loader/react-dom": "^17.0.1",
    "@svgr/webpack": "^5.5.0",
    "autoprefixer": "^10.3.3",
    "babel-loader": "^8.2.2",
    "classnames": "^2.3.1",
    "css-loader": "^6.2.0",
    "file-loader": "^6.2.0",
    "fork-ts-checker-webpack-plugin": "^6.3.2",
    "formik": "^2.2.9",
    "luxon": "^2.0.2",
    "mobx": "^6.3.2",
    "mobx-react": "^7.2.0",
    "postcss": "^8.3.6",
    "postcss-import": "^14.0.2",
    "postcss-loader": "^6.1.1",
    "postcss-preset-env": "^6.7.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hot-loader": "^4.13.0",
    "react-intl": "^5.21.0",
    "react-modal": "^3.14.3",
    "react-packed-grid": "^2.1.0",
    "react-toastify": "^8.0.1",
    "resize-observer-polyfill": "^1.5.1",
    "source-map-loader": "^3.0.0",
    "style-loader": "^3.2.1",
    "tailwindcss": "^2.2.8",
    "ts-loader": "^9.2.5",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "typescript": "^4.4.2",
    "webrtc-adapter": "^8.1.0"
  },
  "devDependencies": {
    "@formatjs/cli": "^4.4.0",
    "@formatjs/ts-transformer": "^3.6.0",
    "@types/luxon": "^2.0.2",
    "@types/node": "^16.7.4",
    "@types/react": "^17.0.19",
    "@types/react-dom": "^17.0.9",
    "@types/react-modal": "^3.12.1",
    "google-protobuf": "^3.18.0-rc.1",
    "husky": "^7.0.2",
    "lerna": "^4.0.0",
    "lint-staged": "^11.1.2",
    "plop": "^2.7.4",
    "prettier": "2.3.2",
    "ts-node": "^10.2.1",
    "webpack-bundle-analyzer": "^4.4.2"
  }
}

{
  "name": "monocle",
  "private": true,
  "version": "1.0.0",
  "license": "UNLICENCED",
  "engines": {
    "node": ">= 16.17.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "plop": "plop --plopfile scripts/plop/plopfile.ts --dest . --require ./scripts/ts-node-register",
    "build": "lerna run build --stream",
    "extract": "formatjs extract",
    "compile": "formatjs compile",
    "extract-en": "yarn extract 'packages/**/*.tsx' --out-file packages/common/lang/en.json --id-interpolation-pattern '[sha512:contenthash:base64:6]'",
    "compile-en": "yarn compile packages/common/lang/en.json --ast --out-file packages/common/compiled-lang/en.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "@babel/core": "^7.15.0",
    "@babel/preset-react": "^7.14.5",
    "@hot-loader/react-dom": "^17.0.1",
    "@svgr/webpack": "^6.3.1",
    "autoprefixer": "^10.3.3",
    "babel-loader": "^8.2.2",
    "classnames": "^2.3.1",
    "css-loader": "^6.2.0",
    "file-loader": "^6.2.0",
    "fork-ts-checker-webpack-plugin": "^7.2.13",
    "formik": "^2.2.9",
    "luxon": "^3.0.1",
    "mobx": "^6.3.2",
    "mobx-react": "^7.2.0",
    "postcss": "^8.4.16",
    "postcss-import": "^14.1.0",
    "postcss-loader": "^7.0.1",
    "postcss-preset-env": "^7.8.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-intl": "^6.0.5",
    "react-modal": "^3.14.3",
    "react-packed-grid": "^2.1.0",
    "react-toastify": "^9.0.8",
    "resize-observer-polyfill": "^1.5.1",
    "source-map-loader": "^4.0.0",
    "style-loader": "^3.2.1",
    "tailwindcss": "^2.2.8",
    "ts-loader": "^9.2.5",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "typescript": "^4.4.2",
    "url-loader": "^4.1.1",
    "webrtc-adapter": "^8.1.0"
  },
  "devDependencies": {
    "@formatjs/cli": "^5.0.7",
    "@formatjs/ts-transformer": "^3.6.0",
    "@types/luxon": "^3.0.0",
    "@types/node": "^18.7.8",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@types/react-modal": "^3.12.1",
    "google-protobuf": "^3.18.0-rc.1",
    "husky": "^8.0.1",
    "lerna": "^5.4.3",
    "lint-staged": "^13.0.3",
    "plop": "^2.7.4",
    "prettier": "2.7.1",
    "ts-node": "^10.2.1",
    "webpack-bundle-analyzer": "^4.4.2"
  },
  "resolutions": {
    "postcss": "8"
  },
  "volta": {
    "node": "18.15.0",
    "yarn": "4.0.0-rc.40"
  }
}
